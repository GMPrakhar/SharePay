<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SharePay.UI.MainPage">

    <ScrollView>
        <StackLayout Spacing="10">
            <Frame BackgroundColor="#000" Padding="10" CornerRadius="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Image Source="card_image.png" HeightRequest="50" WidthRequest="50" Aspect="AspectFit" Grid.Column="0" />

                    <Label Text="Card Name" FontSize="16" Grid.Column="1" />

                    <Label Text="Amount" FontSize="16" Grid.Column="2" HorizontalTextAlignment="End" />
                </Grid>
            </Frame>

            <!-- Add more cards here -->

        </StackLayout>
    </ScrollView>

</ContentPage>
